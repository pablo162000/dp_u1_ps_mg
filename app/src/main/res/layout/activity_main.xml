<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scaleY="0.75"
        android:src="@drawable/logo_login" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="left|center_vertical"
        android:text="Pedidos Online"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/label_saludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Hola! Es bueno verte nuevamente"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/label_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="10dp"
        android:text="Correo:"
        android:textColor="#21FFD3" />

    <EditText
        android:id="@+id/text_email"
        android:layout_width="289dp"
        android:layout_height="49dp"
        android:layout_marginStart="54dp"
        android:ems="10"
        android:hint="example@email.com"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFFFFF" />

    <TextView
        android:id="@+id/label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:text="Contraseña:"
        android:textColor="#21FFD3"
        android:translationX="-4dp" />

    <EditText
        android:id="@+id/text_password"
        android:layout_width="289dp"
        android:layout_height="49dp"
        android:layout_marginStart="54dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/btn_ingresar"
        android:layout_width="289dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:backgroundTint="#17CDA9"
        android:text="Ingresar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="25px" />

    <TextView
        android:id="@+id/label_opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="O conéctese usando las redes sociales"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnTwitter"
            android:layout_width="135dp"
            android:layout_height="48dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="14dp"
            android:backgroundTint="#1DA1F2"
            android:gravity="right|center_vertical"
            android:text="Twitter"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            app:cornerRadius="25px" />

        <Button
            android:id="@+id/btnResult"
            android:layout_width="135dp"
            android:layout_height="48dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="64dp"
            android:backgroundTint="#1877F2"
            android:gravity="right|center_vertical"
            android:text="Facebook"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="25px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regístrese"
            android:textColor="#21FFD3" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="Olvido su contraseña?"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTwitter" />
    </LinearLayout>

    <Button
        android:id="@+id/btnHuella"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:text="Ingresar con Huella"
        android:backgroundTint="#F3932C"></Button>

</LinearLayout>